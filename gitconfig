[global]
    diff-algorithm=histogram

[pull]
    rebase = true

[rebase]
    autoSquash = true

[status]
    short = true
    branch = true

[alias]
    amend = commit --amend --no-edit
    uncommit = reset HEAD^
    sl = log --graph --pretty=format:'%C(yellow)%h%Creset -%Cred%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
